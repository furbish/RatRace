package logicClasses;
/**
 * @author Jeff Furbish, Septemeber 2nd, 2014
 *Racer class for rat race, non-abstract (cause why would you) extended
 *to creat racer objects including player, enemy, and boss.
 */
public class Racer {
	public int attack = 1;
	public int defense = 1;
	public int topSpeed = 1;
	public int acceleration = 1;
	public int agility = 1;

	/** These are the only four stats I'm familiar with, there many be more
	 * as time passes, for now, these should suffice, rework.
	 * 
	 */
	public Racer(int attack, int topSpeed, int acceleration, int agility) {
		this.attack= attack;
		this.topSpeed = topSpeed;
		this.acceleration = acceleration;
	}
	public int getAttack() {
		return attack;
	}
	public int getTopSpeed() {
		return topSpeed;
	}
	public int getAcceleration() {
		return acceleration;
	}
	public String toString() {
		return attack + " '" + acceleration + " '" + topSpeed + "'.";
	}
}
