package InitialClasses;
/**
 * @author Jeff Furbish, Septemeber 2nd, 2014
 * PlayerRacer extends racer, it's only difference will be it's ability to
 * receive upgrades and update its style;
 *
 */
public class PlayerRacer extends Racer {
	public int level = 1;
	/**
	 * @param style
	 * @param attack
	 * @param topSpeed
	 * @param acceleration
	 */
	public PlayerRacer(String style, int attack, int topSpeed, int acceleration) {
		super(style, attack, topSpeed, acceleration);
	}
	public void updateStyle(String sty) {
		style=sty;
	}
	public void upgradeAttack(int x) {
		attack += x;
	}
	public void upgradeAcceleration(int x) {
		acceleration += x;
	}
	public void upgradeTopSpeed(int x) {
		topSpeed += x;
	}
	public void upgradeLevel(int x) {
		level += x;
	}
	public int getLevel() {
		return level;
	}
	public String toString() {
		return "\n\tStyle-> " + style + " \n\tSTATS-> Attack " + attack + ", Acceleration " + acceleration + ", Top Speed " + topSpeed + "  \n\tLevel-> " + level;
	}
}
